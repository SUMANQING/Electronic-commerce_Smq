<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></android.support.v4.view.ViewPager>

    <RadioGroup
        android:id="@+id/radio"
        android:background="@drawable/buttom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/button1"
            android:button="@null"
            android:drawableBottom="@drawable/selector2"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="13dp"
            android:layout_height="match_parent" />
        <RadioButton
            android:id="@+id/button2"
            android:button="@null"
            android:drawableBottom="@drawable/selector"
            android:gravity="center"
            android:layout_width="0dp"
            android:paddingRight="5dp"
            android:layout_marginBottom="13dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <RadioButton
            android:id="@+id/button3"
            android:button="@null"
            android:drawableBottom="@drawable/bottom1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <RadioButton
            android:id="@+id/button4"
            android:button="@null"
            android:drawableBottom="@drawable/selector1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:layout_marginBottom="13dp"
            android:layout_height="match_parent" />
        <RadioButton
            android:id="@+id/button5"
            android:button="@null"
            android:drawableBottom="@drawable/selector3"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="13dp"
            android:layout_height="match_parent" />
    </RadioGroup>
</LinearLayout>