<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SearchActivity">
    <com.smq.commerce.widget.Custom_home
        android:id="@+id/custom_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></com.smq.commerce.widget.Custom_home>
    <LinearLayout
        android:id="@+id/Success"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/search_sw"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/search_ryc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Error"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_78">
        <ImageView
            android:layout_width="@dimen/dp_103"
            android:layout_height="@dimen/dp_89"
            android:src="@mipmap/error"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:text="抱歉，没有找到商品"
            android:textSize="@dimen/sp_14"
            android:textColor="#666666"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>