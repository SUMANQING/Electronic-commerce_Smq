<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login"
    tools:context=".activity.LoginActivity">

    <EditText
        android:id="@+id/login_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_160"
        android:background="@null"
        android:drawableLeft="@mipmap/login_icon_phone"
        android:drawableBottom="@drawable/edit_shape"
        android:padding="@dimen/dp_10"
        android:drawablePadding="@dimen/dp_20"
        android:hint="手机号"
        android:maxLines="1"
        android:paddingLeft="@dimen/dp_36"
        android:textColorHint="#fff" />

    <EditText
        android:id="@+id/login_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:paddingLeft="@dimen/dp_36"
        android:drawableBottom="@drawable/edit_shape"
        android:drawableLeft="@mipmap/login_icon_lock"
        android:drawableRight="@mipmap/login_icon_eye"
        android:drawablePadding="@dimen/dp_20"
        android:padding="@dimen/dp_10"
        android:hint="密码"
        android:password="true"
        android:maxLines="1"
        android:textColorHint="#fff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/login_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_20"
            android:text="记住密码"
            android:textSize="@dimen/sp_14"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/login_registered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/login_check"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:padding="@dimen/dp_20"
            android:text="快速注册"
            android:textColor="#fff"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <Button
        android:id="@+id/login_button"
        android:layout_width="@dimen/dp_280"
        android:layout_marginTop="@dimen/dp_120"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center"
        android:background="@drawable/shape"
        android:text="登录"
        android:textColor="#ff5f71"
        android:textSize="@dimen/sp_18" />

</LinearLayout>